# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# LangSmith Configuration (Optional)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key-here
LANGCHAIN_PROJECT=learn-langraph

# Database Configuration
# The state persistence system automatically detects the database type from the connection string
# Uncomment and configure ONE of the following:

# Azure Cosmos DB
# DATABASE_CONNECTION_STRING=AccountEndpoint=https://your-account.documents.azure.com:443/;AccountKey=your-key;

# PostgreSQL
# DATABASE_CONNECTION_STRING=postgresql://user:password@localhost:5432/langraph_db

# SQL Server
# DATABASE_CONNECTION_STRING=mssql+pyodbc://user:password@server:1433/langraph_db?driver=ODBC+Driver+17+for+SQL+Server

# Database Table/Collection Name
DATABASE_TABLE_NAME=graph_states

# Other LLM Providers (Optional)
# ANTHROPIC_API_KEY=your-anthropic-key
# COHERE_API_KEY=your-cohere-key
